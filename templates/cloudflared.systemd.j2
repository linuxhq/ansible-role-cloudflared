[Unit]
Description=Cloudflare Tunnel
After=network.target

[Service]
ExecStart=/usr/bin/cloudflared --config {{ cloudflared_home + '/.cloudflared/config.yml' }} --no-autoupdate tunnel run
Group={{ cloudflared_group }}
Restart=on-failure
RestartSec=5s
TimeoutStartSec=0
Type=notify
User={{ cloudflared_user }}

[Install]
WantedBy=multi-user.target
